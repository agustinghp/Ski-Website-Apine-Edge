<div class="container mt-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form action="/search" method="GET" class="row g-3">
                
                <div class="col-md-6">
                    <input type="text" name="query" class="form-control form-control-lg"
                        placeholder="Search gear, services, or people..." value="{{query}}">
                </div>

                <div class="col-md-2">
                    <select name="type" class="form-select form-select-lg">
                        <option value="all" {{#if (eq searchType 'all' )}}selected{{/if}}>All Types</option>
                        <option value="products" {{#if (eq searchType 'products' )}}selected{{/if}}>Products</option>
                        <option value="services" {{#if (eq searchType 'services' )}}selected{{/if}}>Services</option>
                        <option value="users" {{#if (eq searchType 'users' )}}selected{{/if}}>Users</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <select name="radius" class="form-select form-select-lg">
                        <option value="10" {{#if (eq radius 10)}}selected{{/if}}>Within 10 mi</option>
                        <option value="25" {{#if (eq radius 25)}}selected{{/if}}>Within 25 mi</option>
                        <option value="50" {{#if (eq radius 50)}}selected{{/if}}>Within 50 mi</option>
                        <option value="100" {{#if (eq radius 100)}}selected{{/if}}>Within 100 mi</option>
                        <option value="5000" {{#if (eq radius 5000)}}selected{{/if}}>Anywhere</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                </div>
            </form>
            
            {{#unless hasLocation}}
            <div class="mt-2 text-danger small">
                {{#if userId}}
                    <i class="bi bi-geo-alt-fill"></i> 
                    Note: We couldn't detect your location from your profile. Showing results from everywhere.
                {{else}}
                    <i class="bi bi-geo-alt-fill"></i> 
                    <a href="/login">Log in</a> to use your location for better search results. Currently showing results from everywhere.
                {{/if}}
            </div>
            {{/unless}}
        </div>
    </div>

    <div class="mb-3">
        {{#if query}}
        <h5>Search results for: <span class="text-primary">"{{query}}"</span></h5>
        {{/if}}
        <p class="text-muted">Found {{resultCount}} result(s)</p>
    </div>

    {{#unless hasResults}}
    <div class="alert alert-info" role="alert">
        No results found. Try increasing your search radius or changing your search terms.
    </div>
    {{/unless}}

    {{#if products}}
    {{#if products.length}}
    <div class="mb-5">
        <h4 class="mb-3">Products</h4>
        <div class="row g-3">
            {{#each products}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    {{#if primary_image}}
                        <img src="{{primary_image}}" class="card-img-top" 
                             style="height: 250px; object-fit: cover;" alt="{{productname}}">
                    {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" 
                             style="height: 250px;">
                            <div class="text-center text-muted">
                                <i class="bi bi-image" style="font-size: 3rem;"></i>
                                <p class="mb-0 mt-2">{{brand}} {{model}}</p>
                            </div>
                        </div>
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{productname}}</h5>
                        <p class="card-text text-truncate">{{productdescription}}</p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                             <p class="text-muted mb-0">
                                <small>
                                    <i class="bi bi-person"></i> {{seller_name}}
                                </small>
                            </p>
                            
                            {{#if seller_location}}
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-geo-alt"></i> {{seller_location}}
                            </span>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        <span class="fs-4 fw-bold text-primary">${{price}}</span>
                        <a href="/products/{{id}}" class="btn btn-secondary float-end">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}

    {{#if services}}
    {{#if services.length}}
    <div class="mb-5">
        <h4 class="mb-3">Services</h4>
        <div class="row g-3">
            {{#each services}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    {{#if primary_image}}
                        <img src="{{primary_image}}" class="card-img-top" 
                             style="height: 250px; object-fit: cover;" alt="{{servicename}}">
                    {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" 
                             style="height: 250px;">
                            <div class="text-center text-muted">
                                <i class="bi bi-briefcase" style="font-size: 3rem;"></i>
                                <p class="mb-0 mt-2">{{servicename}}</p>
                            </div>
                        </div>
                    {{/if}}
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-2">
                            <div class="badge bg-info text-dark me-2">Service</div>
                        </div>
                        <h5 class="card-title">{{servicename}}</h5>
                        <p class="card-text text-truncate">{{servicedescription}}</p>
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                             <p class="text-muted mb-0">
                                <small>
                                    <i class="bi bi-person"></i> {{provider_name}}
                                </small>
                            </p>
                            
                            {{#if provider_location}}
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-geo-alt"></i> {{provider_location}}
                            </span>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        {{#if price}}
                        <span class="fs-4 fw-bold text-primary">${{price}}</span>
                        {{else}}
                        <span class="text-muted">Contact for pricing</span>
                        {{/if}}
                        <a href="/services/{{id}}" class="btn btn-secondary float-end">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}

    {{#if users}}
    {{#if users.length}}
    <div class="mb-5">
        <h4 class="mb-3">People</h4>
        <div class="row g-3">
            {{#each users}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            {{#if profile_image}}
                                <img src="{{profile_image}}" alt="{{username}}" 
                                     class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            {{else}}
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" 
                                     style="width: 60px; height: 60px;">
                                    <span class="fs-4">{{substring username 0 1}}</span>
                                </div>
                            {{/if}}
                            <div>
                                <h5 class="card-title mb-0">{{username}}</h5>
                                {{#if location}}
                                <small class="text-muted"><i class="bi bi-geo-alt"></i> {{location}}</small>
                                {{else}}
                                <small class="text-muted">No location listed</small>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3 d-flex justify-content-between">
                        <a href="/users/{{id}}" class="btn btn-outline-secondary btn-sm w-100">
                            View Profile
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}
</div>