<div class="container mt-4">
    <!-- Search Form -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form action="/search" method="GET" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="query" class="form-control form-control-lg"
                        placeholder="Search gear, services, or people..." value="{{query}}">
                </div>
                <div class="col-md-2">
                    <select name="type" class="form-select form-select-lg">
                        <option value="all" {{#if (eq searchType 'all' )}}selected{{/if}}>All</option>
                        <option value="products" {{#if (eq searchType 'products' )}}selected{{/if}}>Products</option>
                        <option value="services" {{#if (eq searchType 'services' )}}selected{{/if}}>Services</option>
                        <option value="users" {{#if (eq searchType 'users' )}}selected{{/if}}>Users</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Summary -->
    {{#if query}}
    <div class="mb-3">
        <h5>Search results for: <span class="text-primary">"{{query}}"</span></h5>
        <p class="text-muted">Found {{resultCount}} result(s)</p>
    </div>
    {{/if}}

    {{#unless hasResults}}
    <div class="alert alert-info" role="alert">
        {{#if query}}
        No results found for "{{query}}". Try adjusting your search terms.
        {{else}}
        Enter a search term to find products, services, and people.
        {{/if}}
    </div>
    {{/unless}}

    <!-- Products Section -->
    {{#if products}}
    {{#if products.length}}
    <div class="mb-5">
        <h4 class="mb-3">Products</h4>
        <div class="row g-3">
            {{#each products}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    {{#if primary_image}}
                        <img src="{{primary_image}}" class="card-img-top" 
                             style="height: 250px; object-fit: cover;" alt="{{productname}}">
                    {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" 
                             style="height: 250px;">
                            <div class="text-center text-muted">
                                <i class="bi bi-image" style="font-size: 3rem;"></i>
                                <p class="mb-0 mt-2">{{brand}} {{model}}</p>
                            </div>
                        </div>
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{brand}} {{model}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {{#if skilength}}{{skilength}}cm{{/if}}
                            {{#if skiwidth}} | Width: {{skiwidth}}mm{{/if}}
                        </h6>
                        <p class="card-text">{{productdescription}}</p>
                        <p class="text-muted mb-0">
                            <small>
                                <i class="bi bi-person"></i> {{seller_name}}
                                {{#if seller_location}} | <i class="bi bi-geo-alt"></i> {{seller_location}}{{/if}}
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        <span class="fs-4 fw-bold text-primary">${{price}}</span>
                        <a href="/products/{{id}}" class="btn btn-secondary float-end">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}

    <!-- Services Section -->
    {{#if services}}
    {{#if services.length}}
    <div class="mb-5">
        <h4 class="mb-3">Services</h4>
        <div class="row g-3">
            {{#each services}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    {{#if primary_image}}
                        <img src="{{primary_image}}" class="card-img-top" 
                             style="height: 250px; object-fit: cover;" alt="{{servicename}}">
                    {{else}}
                        <div class="bg-light d-flex align-items-center justify-content-center" 
                             style="height: 250px;">
                            <div class="text-center text-muted">
                                <i class="bi bi-briefcase" style="font-size: 3rem;"></i>
                                <p class="mb-0 mt-2">{{servicename}}</p>
                            </div>
                        </div>
                    {{/if}}
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-2">
                            <div class="badge bg-info text-dark me-2">Service</div>
                        </div>
                        <h5 class="card-title">{{servicename}}</h5>
                        <p class="card-text">{{servicedescription}}</p>
                        <p class="text-muted mb-0">
                            <small>
                                <i class="bi bi-person"></i> {{provider_name}}
                                {{#if provider_location}} | <i class="bi bi-geo-alt"></i> {{provider_location}}{{/if}}
                            </small>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3">
                        {{#if price}}
                        <span class="fs-4 fw-bold text-primary">${{price}}</span>
                        {{else}}
                        <span class="text-muted">Contact for pricing</span>
                        {{/if}}
                        <a href="/services/{{id}}" class="btn btn-secondary float-end">View Details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}

    <!-- Users Section -->
    {{#if users}}
    {{#if users.length}}
    <div class="mb-5">
        <h4 class="mb-3">People</h4>
        <div class="row g-3">
            {{#each users}}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            {{#if profile_image}}
                                <img src="{{profile_image}}" alt="{{username}}" 
                                     class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            {{else}}
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" 
                                     style="width: 60px; height: 60px;">
                                    <span class="fs-4">{{substring username 0 1}}</span>
                                </div>
                            {{/if}}
                            <div>
                                <div class="badge bg-primary mb-1">User</div>
                                <h5 class="card-title mb-0">{{username}}</h5>
                            </div>
                        </div>
                        <p class="text-muted mb-1">
                            {{#if location}}
                            <i class="bi bi-geo-alt"></i> {{location}}
                            {{else}}
                            <span class="text-muted">Location not specified</span>
                            {{/if}}
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3 d-flex justify-content-between">
                        <a href="/users/{{id}}" class="btn btn-outline-secondary btn-sm">
                            View Profile
                        </a>
                        {{#if ../userId}}
                        {{#if (eq connectionStatus 'accepted')}}
                        <a href="/chat?user={{id}}" class="btn btn-primary btn-sm">Message</a>
                        {{else}}
                        <button class="btn btn-secondary btn-sm" disabled>Connect to message</button>
                        {{/if}}

                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{/if}}
</div>

<!-- Add Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
