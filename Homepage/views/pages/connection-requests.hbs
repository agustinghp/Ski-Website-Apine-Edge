<h2 class="mb-4">Connection Requests</h2>

<!-- Incoming Requests -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-transparent border-0 pt-3">
        <h5 class="mb-0">Pending Requests</h5>
    </div>

    <div class="list-group list-group-flush">
        {{#if incomingRequests.length}}
        {{#each incomingRequests}}
        <div class="list-group-item d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center">
                <a href="/users/{{this.user_id}}" class="connection-tag text-decoration-none">
                    {{this.username}}
                </a>

                {{#if this.location}}
                <p class="text-muted small mb-0 ms-2">{{this.location}}</p>
                {{/if}}
            </div>

            <div class="d-flex gap-2">
                <form action="/users/{{this.user_id}}/accept" method="POST">
                    <input type="hidden" name="redirectTo" value="/profile/requests">

                    <button class="btn btn-success btn-sm">Accept</button>
                </form>

                <form action="/users/{{this.user_id}}/decline" method="POST">
                    <input type="hidden" name="redirectTo" value="/profile/requests">

                    <button class="btn btn-outline-danger btn-sm">Decline</button>
                </form>
            </div>

        </div>
        {{/each}}
        {{else}}
        <p class="p-3 text-muted">No new connection requests.</p>
        {{/if}}
    </div>
</div>

<!-- Accepted Connections -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-transparent border-0 pt-3">
        <h5 class="mb-0">Your Connections</h5>
    </div>

    <div class="list-group list-group-flush">
        {{#if acceptedConnections.length}}
        {{#each acceptedConnections}}
        <div class="list-group-item d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center">
                <a href="/users/{{this.user_id}}" class="connection-tag text-decoration-none">
                    {{this.username}}
                </a>

                {{#if this.location}}
                <p class="text-muted small mb-0 ms-2">{{this.location}}</p>
                {{/if}}
            </div>

            <a href="/chat?user={{this.user_id}}" class="btn btn-primary btn-sm">
                Message
            </a>

        </div>
        {{/each}}
        {{else}}
        <p class="p-3 text-muted">You don't have any connections yet.</p>
        {{/if}}
    </div>
</div>