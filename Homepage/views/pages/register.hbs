<div class="row justify-content-center">
  <div class="col-lg-5">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">

        {{> message}}

        <form action="/register" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control form-control-lg" id="username" name="username" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control form-control-lg" id="email" name="email" required>
          </div>

          {{!-- All the location Logic --}}

          <div class="mb-3">
            <label for="autocomplete" class="form-label">Location</label>
            <input type="text" class="form-control form-control-lg" id="autocomplete" name="autocomplete" placeholder="Enter your location (address, city, etc.)" autocomplete="off" required>
            <small class="form-text text-muted d-block mt-2">
              ðŸ’¡ Please enter your home address for the best experience. Your full address is kept private and never shared with anyone. Other users will only be able to see your city.
            </small>
          </div>

          <input type="hidden" id="latitude" name="latitude">
          <input type="hidden" id="longitude" name="longitude">
          <input type="hidden" id="location" name="location">



          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control form-control-lg" id="password" name="password" required>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">
              Create Account
            </button>
          </div>
        </form>

        <hr class="my-4">

        <p class="text-center">
          Already have an account? <a href="/login">Login here</a>
        </p>

      </div>
    </div>
  </div>
</div>
<script src="/js/locationAutocomplete.js"></script>