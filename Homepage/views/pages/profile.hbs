<div class="row g-4">
    <!-- Column 1: Profile & Connections -->
    <div class="col-lg-4">
        <!-- Profile Card -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body text-center">
                
                <h3 class="card-title mt-3">{{user.username}}</h3>
                <p class="text-muted">{{user.email}}</p>
                <p class="text-muted">{{user.location}}</p>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-transparent border-0 pt-3">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <!-- THIS IS THE LINK TO THE CHAT PAGE -->
                <a href="/chat" class="btn btn-primary btn-lg">
                    Go to My Chats
                </a>
                <a href="/create-listing" class="btn btn-outline-secondary">
                    <i class="bi bi-plus-circle"></i> Create New Listing
                </a>
            </div>
        </div>

        <!-- Connections Card -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent border-0 pt-3">
                <h5 class="mb-0">My Connections</h5>
            </div>
            <div class="list-group list-group-flush">
                {{#each connections}}
                    <a href="/users/{{this.user_id}}" class="list-group-item list-group-item-action">{{this.username}}</a>
                {{else}}
                    <p class="p-3 text-muted">No connections yet. Find users via listings!</p>
                {{/each}}
            </div>
        </div>
    </div>

    <!-- Column 2: Listings -->
    <div class="col-lg-8">
        <!-- My Product Listings -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-transparent border-0 pt-3">
                <h5 class="mb-0">My Product Listings</h5>
            </div>
            <div class="card-body">
                {{#each products}}
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">{{this.productname}}</h6>
                                    <p class="text-muted mb-2 small">{{this.brand}} {{this.model}}</p>
                                    {{#if this.productdescription}}
                                    <p class="mb-2 small">{{this.productdescription}}</p>
                                    {{/if}}
                                    <div class="text-muted small">
                                        {{#if this.skilength}}<span class="me-3"><i class="bi bi-rulers"></i> {{this.skilength}}cm</span>{{/if}}
                                        {{#if this.skiwidth}}<span><i class="bi bi-arrows-expand"></i> {{this.skiwidth}}mm</span>{{/if}}
                                    </div>
                                </div>
                                <div class="text-end ms-3">
                                    <h5 class="text-primary mb-2">${{this.price}}</h5>
                                    <a href="/products/{{this.id}}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{else}}
                    <div class="text-center py-5">
                        <i class="bi bi-box-seam text-muted" style="font-size: 48px;"></i>
                        <p class="text-muted mt-3">You have not listed any products yet.</p>
                        <a href="/create-listing" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Your First Product
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>

        <!-- My Service Listings -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent border-0 pt-3">
                <h5 class="mb-0">My Service Listings</h5>
            </div>
            <div class="card-body">
                {{#each services}}
                    <div class="card mb-3 border-0 shadow-sm bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <span class="badge bg-info text-dark mb-2">Service</span>
                                    <h6 class="mb-1">{{this.servicename}}</h6>
                                    {{#if this.servicedescription}}
                                    <p class="mb-2 small text-muted">{{this.servicedescription}}</p>
                                    {{/if}}
                                </div>
                                <div class="text-end ms-3">
                                    {{#if this.price}}
                                    <h5 class="text-primary mb-2">${{this.price}}</h5>
                                    {{else}}
                                    <p class="text-muted small mb-2">Custom Pricing</p>
                                    {{/if}}
                                    <a href="/services/{{this.id}}" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{else}}
                    <div class="text-center py-5">
                        <i class="bi bi-tools text-muted" style="font-size: 48px;"></i>
                        <p class="text-muted mt-3">You have not listed any services yet.</p>
                        <a href="/create-listing" class="btn btn-info text-white">
                            <i class="bi bi-plus-circle"></i> Create Your First Service
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
