<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a href="/search" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Search
        </a>
    </div>

    {{#if error}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
    {{else}}

    <div class="row">
        <!-- Product Image Section -->
        <div class="col-lg-5 mb-4">
            <div class="card border-0 shadow-sm">
                {{#if product.imageUrl}}
                <img src="{{product.imageUrl}}" class="card-img-top" alt="{{product.productname}}"
                    style="height: 400px; object-fit: cover;">
                {{else}}
                <img src="https://placehold.co/800x600/e8f4f8/0066cc?text={{product.brand}}+{{product.model}}"
                    class="card-img-top" alt="{{product.productname}}" style="height: 400px; object-fit: cover;">
                {{/if}}
            </div>
        </div>

        <!-- Product Details Section -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <!-- Brand & Model -->
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <span class="badge bg-primary mb-2">{{product.brand}}</span>
                            <h2 class="mb-1">{{product.productname}}</h2>
                            <h5 class="text-muted">{{product.model}}</h5>
                        </div>
                        <div class="text-end">
                            <h3 class="text-primary mb-0">${{product.price}}</h3>
                        </div>
                    </div>

                    <hr>

                    <!-- Specifications -->
                    <div class="mb-4">
                        <h5 class="mb-3"><i class="bi bi-info-circle"></i> Specifications</h5>
                        <div class="row">
                            {{#if product.skilength}}
                            <div class="col-md-6 mb-2">
                                <strong>Length:</strong> {{product.skilength}} cm
                            </div>
                            {{/if}}
                            {{#if product.skiwidth}}
                            <div class="col-md-6 mb-2">
                                <strong>Width:</strong> {{product.skiwidth}} mm
                            </div>
                            {{/if}}
                            <div class="col-md-6 mb-2">
                                <strong>Brand:</strong> {{product.brand}}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Model:</strong> {{product.model}}
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    {{#if product.productdescription}}
                    <div class="mb-4">
                        <h5 class="mb-3"><i class="bi bi-card-text"></i> Description</h5>
                        <p class="text-muted">{{product.productdescription}}</p>
                    </div>
                    {{/if}}

                    <hr>

                    <!-- Seller Information -->
                    <div class="mb-4">
                        <h5 class="mb-3"><i class="bi bi-person"></i> Seller Information</h5>
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                    style="width: 60px; height: 60px; font-size: 24px;">
                                    {{substring seller.username 0 1}}
                                </div>
                            </div>
                            <div>
                                <h6 class="mb-1">
                                    <a href="/users/{{seller.id}}" class="text-decoration-none">
                                        {{seller.username}}
                                    </a>
                                </h6>

                                {{#if seller.location}}
                                <p class="text-muted mb-1">
                                    <i class="bi bi-geo-alt"></i> {{seller.location}}
                                </p>
                                {{/if}}
                                <p class="text-muted mb-0 small">Member since {{formatDate seller.created_at}}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        {{#if userId}}
                        {{#if isOwner}}
                        <a href="/profile" class="btn btn-secondary btn-lg">
                            <i class="bi bi-pencil"></i> Edit Listing
                        </a>
                        {{else}}
                        <a href="/chat?user={{seller.id}}" class="btn btn-primary btn-lg">
                            <i class="bi bi-chat-dots"></i> Contact Seller
                        </a>
                        {{/if}}
                        {{else}}
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Login to Contact Seller
                        </a>
                        {{/if}}
                    </div>

                    <!-- Listing Info -->
                    <div class="mt-3 text-muted small text-center">
                        Listed on {{formatDate product.created_at}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{/if}}
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">